@using System.Data.SqlClient
@model List<Order>
@{
    int r = 0;
    int p = 0;
    int d = 0;
    foreach (var i in @Model)
    {
        if (i.Status == "Placed")
        {
            r += 1;
        } else if (i.Status == "Accepted")
        {
            p += 1;
        } else if (i.Status == "Prepared")
        {
            d += 1;
        }
    }
}
