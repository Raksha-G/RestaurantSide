                        SqlCommand sqlCommand = new SqlCommand(String.Format("select Address from Orders where InVoiceNo = '{0}'",obj.InVoiceNo) , conn);
                        conn.Open();
                        SqlDataReader sr = sqlCommand.ExecuteReader();
                        while (sr.Read())
