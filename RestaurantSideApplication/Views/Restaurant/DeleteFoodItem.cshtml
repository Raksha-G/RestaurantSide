@model FoodItem

<div class="d-flex justify-content-center">
<div class="bg-container shadow">
    <div class="d-flex justify-content-center">
        <img src="@Model.FoodItemImage" class="item-image"/>
    </div>
    
    <h1 class="item-name"> @Model.FoodItemName</h1>
    <h1 class="item-price">₹@Model.Price</h1>
    <div class="d-flex flex-row justify-content-center">
        <button class="btn btn-danger button-element" onclick="document.getElementById('id01').style.display='block'">Delete</button>
    
    
    
        <form asp-controller="Restaurant" asp-action="DisplayFoodItems">
            <button type="submit" class="btn btn-dark button-element">Cancel</button>
        </form>
    </div>
</div>
</div>
<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close pb-4" title="Close Modal">×</span>
  <form class="modal-content">
    <div class="container pt-5">
      <h1>Delete Item</h1>
      <p>Are you sure you want to delete this Item?</p>
    
      <div class="clearfix">
          <form asp-controller="Restaurant" asp-action="DisplayFoodItems">
              <button type="submit" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn d-none">Cancel</button>
          </form>
         <form asp-controller="Restaurant" asp-action="DeleteFoodItem">
             <div class="d-flex justify-content-center">
                 <button type="submit" onclick="document.getElementById('id01').style.display='none'" class="deletebtn">Delete</button>
            </div>
             
         </form>
        
      </div>
    </div>
  </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>