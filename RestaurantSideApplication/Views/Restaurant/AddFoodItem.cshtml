@{
}




<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4 container  align-self-center " style="width:40%">

        <div class="p-3 mt-4 container align-self-center">
          
            <h2>Add Food Item</h2>
            <br />

            <div class="mb-3">
               <input asp-for="FoodItemName" placeholder="FoodItem Name" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                <input asp-for="FoodItemImage" placeholder="FoodItem Image" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                <input asp-for="Price" placeholder="Price" class="form-control" style="width:100%"/>
            </div>

            <div class="mb-3">
                @*<label asp-for="ImageFile" class="control-label"></label>*@
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <button asp-controller="Restaurant" asp-action="Create" type="submit" class="btn btn-outline-primary" style="width:100% ">Submit</button>

        </div>

      
        
    </div>
</form>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }