@{
}


<div class="bg-black" style="height:100vh; padding-top:20px;">

<form method="post" asp-controller="Restaurant" asp-action="AddFoodItem">
    <div class="border p-3 mt-4 container  align-self-center " style="width:40%">

        <div class="p-3 mt-4 container align-self-center">
          
            <h2 class="text-success">Add Food Item</h2>
            <br />

            <div class="mb-3">
               <input value="" asp-for="FoodItemName" placeholder="FoodItem Name" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                <input value="" asp-for="FoodItemImage" placeholder="FoodItem Image" class="form-control" style="width:100%"/>
            </div> 

             <div class="mb-3">
                <input value="" asp-for="Price" placeholder="Price" class="form-control" style="width:100%"/>
            </div>

             <div class="mb-3">
                 <select value="" asp-for="Type" class="" style="width:100%; height:35px; padding-left:10px; border-radius:4px;">
                     <option>Veg</option>
                     <option>NonVeg</option>
                 </select>
                @*<input value="" asp-for="Type" placeholder="Veg or NonVeg" class="form-control" style="width:100%"/>*@
            </div>

            @*<div class="mb-3">
                <input asp-for="ImageFile" accept="image/*" class="form-control" style="width:100%"/>
            </div>*@
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary" style="width:45% ">Submit</button>
            <a class="btn btn-danger btn-style"  style="width:45% " asp-controller="Restaurant" asp-action="DisplayFoodItems">Cancel</a>
            </div>
            
        </div>


      
        
    </div>
</form>

</div>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }