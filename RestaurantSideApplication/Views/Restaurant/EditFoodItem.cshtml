@model FoodItem

@{
     ViewData["Title"] = "EditFoodItem";
}

<div class="" style="height:100vh; padding-top:20px; background-color:antiquewhite">

<form method="post" asp-controller="Restaurant" asp-action="EditFoodItem" enctype="multipart/form-data">
    <div class="border shadow p-3 mt-4 container  align-self-center " style="width:40%; background-color:bisque;">

        <div class="p-3 mt-4 container align-self-center">
          
            <h2 class="text-black">Edit Food Item</h2>
            <br />

            <div class="mb-3">
               <input required value="@Model.FoodItemName" asp-for="FoodItemName" placeholder="FoodItem Name*" class="form-control" style="width:100%"/>
            </div>

             @*<div class="mb-3">
                <input required value="@Model.FoodItemImage" asp-for="FoodItemImage" placeholder="FoodItem Image*" class="form-control" style="width:100%"/>
            </div> *@

             <div class="mb-3">
                <input required value="@Model.Price" asp-for="Price" placeholder="Price*" class="form-control" style="width:100%"/>
            </div>

            <div class="mb-3">
                <select required value="@Model.Type" asp-for="Type" class="" style="width:100%; height:35px; padding-left:10px; border-radius:4px;">
                     <option>Veg</option>
                     <option>NonVeg</option>
                 </select>
            </div> 
            <div class="mb-3">
                <label class="text-secondary ml-2" asp-for="ImageFile" class="control-label">Upload Image*</label>
                <input value="@Model.ImageFile" required class="text-secondary" type="file" asp-for="ImageFile" accept="image/*" />
            </div>
            @*<div class="mb-3">
                <input asp-for="ImageFile" accept="image/*" class="form-control" style="width:100%"/>
            </div>*@

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary" style="width:45% ">Save</button>
            <a class="btn btn-danger btn-style"  style="width:45% " asp-controller="Restaurant" asp-action="DisplayFoodItems">Cancel</a>
            </div>
            <script>
                
                function btnFunction()
                {
                    alert("Edited Successfully");
                }
            </script>

        </div>

      
        
    </div>
</form>

</div>

@section scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }