@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/scss/HomePage.css"/>
<body>
    <div class="bg-container">
        <div class="d-flex justify-content-between top-container">
            <div class="d-flex flex-column ">
                <h1 class="heading">JustEat</h1>
                <p class="para">for business</p>
            </div>
            <div class="d-flex justify-content-between button-container">
                <a asp-controller="Restaurant" asp-action="Login" class="btn btn-light login-button">Login</a>
                <a asp-controller="Restaurant" asp-action="CreateAccount" class="btn btn-primary create-button">Create Account</a>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div>
                <div class="d-flex flex-column">
                    <h1 class="register-heading">Register your restaurant on JustEat</h1>
                    <p class="register-para">and get more customers!</p>
                </div>
                <div class="d-flex justify-content-between register-container">
                
                <a asp-controller="Restaurant" asp-action="CreateAccount" class="btn btn-primary register-button">Register your restaurant !! Now itself</a>
                <a asp-controller="Restaurant" asp-action="Login" class="btn btn-light register-login-button">Restaurant already listed? login now</a>               
            </div>
            </div>
        </div>
    </div>
</body>

